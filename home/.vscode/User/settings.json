// Visual Studio Code - settings.json
//
// Note: settings.json supports comments and trailing commas!

{
    // Text Editor
    "editor.copyWithSyntaxHighlighting": false,
    "editor.cursorSurroundingLines": 5,
    "editor.cursorSurroundingLinesStyle": "all",
    "editor.find.addExtraSpaceOnTop": false,
    "editor.find.autoFindInSelection": "multiline",
    "editor.fontFamily": "'Fira Mono', 'Fira Code', monospace",
    "editor.fontSize": 14,
    "editor.highlightActiveIndentGuide": false,
    "editor.matchBrackets": "near",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.occurrencesHighlight": false,
    "editor.rulers": [80],
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.suggest.statusBar.visible": true,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.simpleDialog.enable": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    // Workbench / UI
    "breadcrumbs.enabled": false,
    "breadcrumbs.icons": false,
    "workbench.editor.untitled.labelFormat": "name",
    "workbench.enableExperiments": false,
    "workbench.fontAliasing": "auto",
    "workbench.preferredDarkColorTheme": "Atom One Dark",
    "workbench.preferredLightColorTheme": "Atom One Light",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tree.renderIndentGuides": "none",

    // Custom Theming
    "workbench.colorCustomizations": {
        "scrollbar.shadow": "#ffffff00", // Disable drop shadows
        "widget.shadow": "#ffffff00", // Disable drop shadows
        "editorRuler.foreground": "#44444444",
    },
    "editor.tokenColorCustomizations": {
        "[Atom One Dark]": {
            "textMateRules": [
                {
                    // Disable highlighting for `variable.other`
                    "scope": "variable.other",
                    "settings": { "foreground": "#ABB2BF" }
                }
            ]
        },
        "[Atom One Light]": {
            "textMateRules": [
                {
                    // Disable highlighting for `variable.other`
                    "scope": "variable.other",
                    "settings": { "foreground": "#383A42" }
                }
            ]
        },
    },

    // Features
    "extensions.showRecommendationsOnlyOnDemand": true,
    "npm.fetchOnlinePackageInfo": false,
    "json.schemaDownload.enable": false,

    // Extensions - Remote
    "remote.SSH.allowLocalServerDownload": false,
    "remote.SSH.configFile": "~/.ssh/config.d/home.ssh",
    "remote.SSH.lockfilesInTmp": true,

    // Rust
    "[rust]": {
        "editor.rulers": [100],
        "editor.defaultFormatter": "matklad.rust-analyzer",
        "editor.formatOnSave": true,
    },

    // Markdown
    "[markdown]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.quickSuggestions": false
    },

    // User dictionary
    "cSpell.userWords": [
        "aarch",
        "ACPI",
        "autohide",
        "barrick",
        "bitor",
        "bootnum",
        "btree",
        "capi",
        "cbarrick",
        "cmdline",
        "ctlz",
        "ctype",
        "deque",
        "deserialization",
        "dtype",
        "dtypes",
        "dups",
        "efibootmgr",
        "ESPs",
        "evolv",
        "extendee",
        "fixativity",
        "impls",
        "initrd",
        "inplace",
        "intptr",
        "intrinsics",
        "ipython",
        "jstype",
        "klass",
        "libc",
        "mobo",
        "numpy",
        "objc",
        "oneof",
        "oneofs",
        "paren",
        "phanteks",
        "PMBR",
        "proto",
        "protobuf",
        "protos",
        "pyproject",
        "repr",
        "RNGs",
        "RPMs",
        "rsplit",
        "rustfmt",
        "Ryzen",
        "sata",
        "scipy",
        "semver",
        "sfixed",
        "simd",
        "sint",
        "syscall",
        "syscalls",
        "uintptr",
        "unbuffered",
        "vectorize",
        "Weyl"
    ],

    // Uncategorized
    // (Changing settings in the UI will place items here)
    "uncategorized": "dummy setting to force new entries below",
    "python.showStartPage": false,
    "python.disableInstallationCheck": true,
    "python.diagnostics.sourceMapsEnabled": true,
    "cSpell.showStatus": false,
    "cSpell.allowCompoundWords": true,
    "explorer.confirmDragAndDrop": false,
    "files.associations": {
        "*.pl": "prolog"
    },
    "rust-analyzer.cargo.allFeatures": true,
    "rust-analyzer.inlayHints.enable": false,
    "rust-analyzer.cargo.loadOutDirsFromCheck": true,
    "rust-analyzer.assist.importPrefix": "by_self",
    "rust-analyzer.debug.openDebugPane": true,
    "rust-analyzer.rustfmt.extraArgs": [
        "--unstable-features"
    ],
    "rust-analyzer.diagnostics.disabled": [
        "unresolved-import"
    ],
    "editor.formatOnSave": false,
    "editor.formatOnPaste": true,
    "workbench.editor.untitled.hint": "hidden",
    "workbench.colorTheme": "Atom One Dark",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "search.useGlobalIgnoreFiles": true,
    "workbench.editor.decorations.badges": false,
    "python.formatting.provider": "yapf",
    "rust-analyzer.lens.implementations": false,
    "prolog.executablePath": "swipl",
    "workbench.activityBar.visible": false,
    "go.toolsManagement.autoUpdate": true,
}

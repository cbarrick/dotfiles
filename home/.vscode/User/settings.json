// Visual Studio Code - settings.json
//
// Note: settings.json supports comments and trailing commas!

{
    // File handling
    "files.associations": { "*.pl": "prolog" },
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.simpleDialog.enable": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    // Text Editor
    "editor.bracketPairColorization.enabled": false,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.cursorSurroundingLines": 5,
    "editor.cursorSurroundingLinesStyle": "all",
    "editor.find.addExtraSpaceOnTop": false,
    "editor.find.autoFindInSelection": "multiline",
    "editor.fontFamily": "'Fira Mono', 'Fira Code', monospace",
    "editor.fontSize": 14,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.matchBrackets": "near",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.occurrencesHighlight": "off",
    "editor.rulers": [80],
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.suggestSelection": "first",
    "breadcrumbs.icons": false,
    "workbench.colorTheme": "Atom One Dark",
    "workbench.editor.decorations.badges": false,
    "workbench.editor.untitled.labelFormat": "name",
    "workbench.editorAssociations": { "*.ipynb": "jupyter-notebook" },
    "workbench.enableExperiments": false,
    "workbench.fontAliasing": "antialiased", // Disable sub-pixel AA
    "workbench.preferredDarkColorTheme": "Atom One Dark",
    "workbench.preferredLightColorTheme": "Atom One Light",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tree.renderIndentGuides": "none",

    // Theme Customization
    "workbench.colorCustomizations": {
        "scrollbar.shadow": "#ffffff00", // Disable drop shadows
        "widget.shadow": "#ffffff00", // Disable drop shadows
        "editorRuler.foreground": "#44444444",
    },
    "editor.tokenColorCustomizations": {
        "[Atom One Dark]": {
            "textMateRules": [
                {
                    // Disable highlighting for `variable.other`
                    "scope": "variable.other",
                    "settings": { "foreground": "#ABB2BF" }
                }
            ]
        },
        "[Atom One Light]": {
            "textMateRules": [
                {
                    // Disable highlighting for `variable.other`
                    "scope": "variable.other",
                    "settings": { "foreground": "#383A42" }
                }
            ]
        },
    },

    // Misc Features
    "explorer.confirmDragAndDrop": false,
    "extensions.ignoreRecommendations": true,
    "search.useGlobalIgnoreFiles": true,

    // Languages - Python
    "[python]": {
        "editor.formatOnType": true
    },

    // Languages - Rust
    "[rust]": {
        "editor.rulers": [100],
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "editor.formatOnSave": true,
    },

    // Languages - Markdown
    "[markdown]": {
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },

    // Languages - JSON
    "[json]": {
        "editor.formatOnSave": false,
    },
    "[jsonc]": {
        "editor.formatOnSave": false,
    },

    // Languages - HTML
    "[html]": {
        "editor.formatOnSave": false,
    },

    // Extensions - C/C++
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4 }",

    // Extensions - npm
    "npm.fetchOnlinePackageInfo": false,

    // Extensions - JSON
    "json.schemaDownload.enable": false,

    // Extensions - Remote
    "remote.SSH.localServerDownload": "always",
    "remote.SSH.configFile": "~/.ssh/config.d/home.ssh",
    "remote.SSH.lockfilesInTmp": true,

    // Extensions - Code Spell Checker
    "cSpell.language": "en-US",
    "cSpell.allowCompoundWords": true,
    "cSpell.customDictionaries": {
        "personal": {
            "name": "personal",
            "path": "~/.words",
            "addWords": true,
        }
    },

    // Extensions - Rust Analyzer
    "rust-analyzer.assist.emitMustUse": true,
    "rust-analyzer.cargo.features": "all",
    "rust-analyzer.check.features": "all",
    "rust-analyzer.imports.prefix": "crate",
    "rust-analyzer.rustfmt.extraArgs": [ "--unstable-features" ],

    // Extensions - Python
    "python.diagnostics.sourceMapsEnabled": true,
    "python.formatting.provider": "yapf",

    // Extensions - Go
    "go.toolsManagement.autoUpdate": true,

    // Extensions - Prolog
    "prolog.executablePath": "/opt/homebrew/bin/swipl",

    // Extensions - YAML
    "redhat.telemetry.enabled": false,

    // Uncategorized
    // Changing settings in the UI will place new items here.
    // Frequently changed settings will be left in this section.
    "uncategorized": "dummy setting to force new entries below",
    "window.commandCenter": false,
    "workbench.editor.empty.hint": "hidden",
    "evenBetterToml.formatter.allowedBlankLines": 2,
    "evenBetterToml.schema.enabled": false,
    "evenBetterToml.formatter.alignComments": false,
}

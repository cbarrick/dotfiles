# editorconfig.org

root = true

[*]
indent_style = tab
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4
indent_style = space

[*.rs]
indent_size = 4
indent_style = space

[*.{html,xml,svg,yml}]
indent_size = 2
indent_style = space

[Makefile]
indent_style = tab

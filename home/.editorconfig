# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 4

[*.{py,rst}]
indent_style = space
indent_size = 4

[*.rs]
indent_style = space
indent_size = 4

[*.{html,xml,svg,yml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 8

[.gitconfig]
indent_style = tab
indent_size = 8
